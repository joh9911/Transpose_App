<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:id="@+id/header_view">

    <LinearLayout
        android:id="@+id/fragmentTitleLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:paddingTop="10dp"
        app:layout_constraintTop_toTopOf="@id/header_view"
        >
        <TextView
            android:id="@+id/fragmentVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
             />

        <LinearLayout
            android:id="@+id/fragmentVideoDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/video_view_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="0.5"
                android:background="@color/before_getting_data_color"
                android:textColor="@color/description_color"
                 />
            <TextView
                android:id="@+id/video_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="0.5"
                android:background="@color/before_getting_data_color"
                android:layout_marginStart="5dp"
                android:textColor="@color/description_color"
                />
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/channel_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@id/fragmentTitleLinearLayout">
        <ImageView
            android:id="@+id/channel_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/before_getting_data_color"
            />

        <TextView
            android:id="@+id/channel_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:background="@color/before_getting_data_color"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_weight="1"
             />

        <TextView
            android:id="@+id/channel_subscription_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right"
            android:background="@color/before_getting_data_color"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:textColor="@color/description_color"

            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pitch_control_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/channel_linear_layout">
        <ImageView
            android:id="@+id/minus_button"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_exposure_neg_1_24"/>
        <ImageView
            android:id="@+id/init_button"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_replay_24_black"/>
        <ImageView
            android:id="@+id/plus_button"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_exposure_plus_1_24"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>