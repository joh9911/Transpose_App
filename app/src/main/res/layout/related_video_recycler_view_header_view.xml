<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/header_view">
    <LinearLayout
        android:id="@+id/fragmentTitleLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="@id/header_view"
        >
        <TextView
            android:id="@+id/fragmentVideoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="title" />

        <LinearLayout
            android:id="@+id/fragmentVideoDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/video_view_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="0.5"
                android:background="@color/before_getting_data_color"
                android:textColor="@color/description_color"
                android:text="detail" />
            <TextView
                android:id="@+id/video_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:layout_weight="0.5"
                android:layout_marginStart="5dp"
                android:background="@color/before_getting_data_color"
                android:textColor="@color/description_color"
                android:text="time"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/channel_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toBottomOf="@id/fragmentTitleLinearLayout">
        <ImageView
            android:id="@+id/channel_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@color/before_getting_data_color"
            />

        <TextView
            android:id="@+id/channel_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="channel" />

        <TextView
            android:id="@+id/channel_subscription_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="20dp"
            android:textColor="@color/description_color"
            android:text="하하"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>