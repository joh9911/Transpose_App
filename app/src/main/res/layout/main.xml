<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_motion_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:layoutDescription="@xml/main_scene">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/toolbar_item">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_gravity="left"/>
    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view">
        <LinearLayout
            android:id="@+id/scroll_view_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/popular_Top100_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="인기 Top 100"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="10dp"
                />

            <ProgressBar
                android:id="@+id/popular_Top100_playlist_video_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popular_Top100_playlist_video_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:nestedScrollingEnabled="false"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/this_year_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="올해의 음악"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="30dp"
                />

            <ProgressBar
                android:id="@+id/this_year_playlist_video_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/this_year_playlist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/today_hot_list_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="오늘의 핫 리스트"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="10dp"
                />
            <ProgressBar
                android:id="@+id/today_hot_list_playlist_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/today_hot_list_playlist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:nestedScrollingEnabled="false"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/latest_music_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="최신 음악 플레이리스트"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="10dp"
                />
            <ProgressBar
                android:id="@+id/latest_music_playlist_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/latest_music_playlist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:nestedScrollingEnabled="false"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/best_atmosphere_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="베스트 분위기 맞춤 플레이리스트"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="10dp"
                />
            <ProgressBar
                android:id="@+id/best_atmosphere_playlist_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/best_atmosphere_playlist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:nestedScrollingEnabled="false"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/best_situation_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="베스트 상황 맞춤 플레이리스트"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="10dp"
                />
            <ProgressBar
                android:id="@+id/best_situation_playlist_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/best_situation_playlist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:nestedScrollingEnabled="false"
                android:visibility="invisible"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


    <FrameLayout
        android:id="@+id/playlist_items_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"/>
    <FrameLayout
        android:id="@+id/search_result_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"/>

    <FrameLayout
        android:id="@+id/channel_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/drawer_background"
        app:layout_constraintTop_toBottomOf="@id/tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>


    <LinearLayout
        android:id="@+id/transpose_page"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/drawer_background"
        android:visibility="invisible">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/transpose_page_constraint_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/drawer_background">

            <TextView
                android:id="@+id/transpose_page_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transpose"
                android:textSize="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />
            <LinearLayout
                android:id="@+id/pitch_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.20"
                >
                <TextView
                    android:id="@+id/pitch_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="피치"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/pitch_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/bottom_border" />
            </LinearLayout>

            <ImageView
                android:id="@+id/pitch_init_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_replay_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintVertical_bias="0.3"/>

            <SeekBar
                android:id="@+id/pitch_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.35"
                android:max="10"
                android:min="-10"
                android:progress="0"/>

            <LinearLayout
                android:id="@+id/tempo_linear_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.50"
                >

                <TextView
                    android:id="@+id/tempo_text_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="템포"
                    android:textSize="30dp"/>

                <TextView
                    android:id="@+id/tempo_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="20dp"
                    android:textAlignment="center"
                    android:background="@drawable/bottom_border"
                    />
            </LinearLayout>

            <ImageView
                android:id="@+id/tempo_init_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_baseline_replay_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.95"
                app:layout_constraintVertical_bias="0.55"/>

            <SeekBar
                android:id="@+id/tempo_seek_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.65"
                android:max="10"
                android:min="-10"
                android:progress="0"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/player_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottom_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navi_item"/>



</androidx.constraintlayout.motion.widget.MotionLayout>



