<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_fragment_tool_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_background"
        app:collapseIcon="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintTop_toTopOf="parent"
        android:fitsSystemWindows="true"
        app:menu="@menu/tool_bar">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/app_icon_foreground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Transpose"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_gravity="left"/>
    </androidx.appcompat.widget.Toolbar>


    <androidx.core.widget.NestedScrollView
        android:id="@+id/main_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_fragment_tool_bar"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:id="@+id/scroll_view_linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/popular_Top100_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/popular_Top100_playlist_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                />

            <ProgressBar
                android:id="@+id/popular_Top100_playlist_video_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="200dp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/popular_Top100_playlist_video_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="320dp"
                android:nestedScrollingEnabled="false"
                android:visibility="invisible"
                />
            <TextView
                android:id="@+id/this_year_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/this_year_playlist_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                />

            <ProgressBar
                android:id="@+id/this_year_playlist_video_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/this_year_playlist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:nestedScrollingEnabled="false"
                android:orientation="horizontal"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/today_hot_list_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/today_hot_list_playlist_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                />
            <ProgressBar
                android:id="@+id/today_hot_list_playlist_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/today_hot_list_playlist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:nestedScrollingEnabled="false"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/latest_music_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/latest_music_playlist_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                />
            <ProgressBar
                android:id="@+id/latest_music_playlist_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/latest_music_playlist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:nestedScrollingEnabled="false"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/best_atmosphere_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/best_atmosphere_playlist_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                />
            <ProgressBar
                android:id="@+id/best_atmosphere_playlist_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/best_atmosphere_playlist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:nestedScrollingEnabled="false"
                android:visibility="invisible"
                />

            <TextView
                android:id="@+id/best_situation_playlist_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/best_situation_playlist_text"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                />
            <ProgressBar
                android:id="@+id/best_situation_playlist_progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="240dp"
                android:layout_gravity="center"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/best_situation_playlist_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="240dp"
                android:layout_marginBottom="50dp"
                android:nestedScrollingEnabled="false"
                android:visibility="invisible"
                />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <FrameLayout
        android:id="@+id/search_result_frame_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/home_fragment_tool_bar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/search_suggestion_keyword_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintTop_toBottomOf="@id/home_fragment_tool_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>