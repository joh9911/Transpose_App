<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/fragmentVideoDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/video_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textColor="@color/description_color"
            />
        <TextView
            android:id="@+id/video_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_marginStart="10dp"
            android:textColor="@color/description_color"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/channel_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintTop_toBottomOf="@+id/fragmentVideoDetail">
        <ImageView
            android:id="@+id/channel_image_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            />

        <TextView
            android:id="@+id/channel_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:layout_gravity="center_vertical"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/channel_subscription_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/description_color"

            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/add_button"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:text="추가"
            android:textStyle="bold"
            android:background="@drawable/border_gray_click_effect"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="10dp">

        </Button>
    </LinearLayout>
    <TextView
        android:id="@+id/pitch_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pitch_text"
        android:textStyle="bold"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/channel_linear_layout"
        android:gravity="center"/>

    <LinearLayout
        android:id="@+id/pitch_control_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/round_border_gray"
        android:layout_margin="5dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/pitch_text_view">
        <ImageView
            android:id="@+id/minus_button"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_exposure_neg_1_24"/>
        <ImageView
            android:id="@+id/init_button"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_replay_24_black"/>
        <ImageView
            android:id="@+id/plus_button"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_exposure_plus_1_24"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tempo_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tempo_text"
        android:gravity="center"
        android:textStyle="bold"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/pitch_control_linear_layout"/>

    <LinearLayout
        android:id="@+id/tempo_control_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:background="@drawable/round_border_gray"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/tempo_text_view">
        <ImageView
            android:id="@+id/tempo_minus_button"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_exposure_neg_1_24"/>
        <ImageView
            android:id="@+id/tempo_init_button"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_replay_24_black"/>
        <ImageView
            android:id="@+id/tempo_plus_button"
            android:layout_weight="1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_baseline_exposure_plus_1_24"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>